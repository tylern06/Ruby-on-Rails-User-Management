<html lang="en">
	<head>
	    <title>Edit</title>
	</head>
	<body>
		<% if flash[:errors] %>
			<% flash[:errors].each do |e| %>
				<p><%= e %></p>
			<% end %>
		<% end %>
		<h1>Editing User</h1>
		<!-- <form action='/users' method='post'> -->
		<form action='/users/<%= @user.id %>'method='post'>
			<!-- hidden HTTP patch request -->
			<input type="hidden" name="_method" value="patch">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			<p>First Name: <input type='text' value="<%= @user.first_name %>" name='user[first_name]'></p>
			<p>Last Name: <input type='text' value="<%= @user.last_name %>" name='user[last_name]'></p>
			<p>Email: <input type='text' value="<%= @user.email_address %>" name='user[email_address]'></p>
			<p>Password: <input type='password' name='password'></p>
			<p><input type='submit' value='Update'></p>
		</form>
		<a href="/users/<%= @user.id %>">Show</a>
		<a href="#" onclick="history.go(-1)">Back</a>
	</body>
</html>

